<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin'}) do |f| %>

      <p class="title">Movie.ly</p>
      <h2 class="form-signin-heading">Forgot password?</h2>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %><br/>
      <%= f.submit 'Send me reset', class: 'btn btn-lg btn-primary btn-block' %>
      <%= devise_error_messages! %>
      <%= render "devise/shared/links" %>
  <% end %>

</div>